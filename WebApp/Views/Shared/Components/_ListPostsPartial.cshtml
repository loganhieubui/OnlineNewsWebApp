@{
    Layout = "_Layout";
}
@model IList<PostViewModel>

@{
    if (@Model == null)
    {
        <h2>Can't find the posts included your keyword</h2>
    }
    else {
        @foreach (var post in Model)
        {
            <div class="post-preview">
                <h5 class="text-primary">
                    @Html.PostLink(post.Title, post.PostedOn.Year, post.PostedOn.Month, post.UrlSlug)
                </h5>
                <p class="m-0 post-meta">Posted @post.PostedOn.FriendlyFormat() with rate @post.Rate by @post.ViewCount view(s)</p>
                <div class="m-0">@Html.Raw(post.ShortDescription)</div>
                <hr>
            </div>
        }
    }
}
