@{
}
@model TagToCreateViewModel

<form class="row-cols-12" style="padding: 24px;" action="/Admin/Tag/Create" method="post" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h2 class="pb-2">Create new tag</h2>
    <div class="mb-3">
        <label for="Name">
            <b>Name</b>
        </label>
        <input type="text" asp-for="Name" tabindex="5" class="form-control" placeholder="Name" value="@(Model!=null?Model.Name:null)" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Create</button>
    <a href="/Admin/Tag" class="btn btn-secondary">Cancel</a>
</form>

